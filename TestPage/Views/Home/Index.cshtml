@{
    ViewData["Title"] = "Image Comparer";
}

<div class="text-center">
    <h1 class="display-4">Image Comparer</h1>
    <p>Select 2 images to compare and click Submit.</p>
    
    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Upload">
        <div class="form-group">
            <div class="col-md-10">
                <p>Image 1: <input type="file" name="files" multiple></p>
                <p>Image 2: <input type="file" name="files" multiple></p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Submit">
            </div>
        </div>
    </form>
</div>
